# ==============================================
# CONFIGURACIÓN DE ENTORNO - DESARROLLO
# ==============================================

# Aplicación
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Base de datos PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=pab_legal_dev
DATABASE_SCHEMA=public
DATABASE_SYNC=true
DATABASE_LOGGING=true

# JWT
JWT_SECRET=super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=super-secret-refresh-jwt-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:4200

# Carga de archivos
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,txt

# Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="PAB Legal System" <noreply@pab-legal.com>

# Notificaciones
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Monitoreo
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Perú específico
SUNAT_ENDPOINT=https://api.sunat.gob.pe
RENIEC_ENDPOINT=https://api.reniec.gob.pe
TIMEZONE=America/Lima
LOCALE=es-PE
CURRENCY=PEN

# Desarrollo
DEBUG_SQL=true
DEBUG_EMAILS=true
SWAGGER_ENABLED=true
